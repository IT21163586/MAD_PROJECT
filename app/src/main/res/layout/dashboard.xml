<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Dashboard">


    <TextView
        android:id="@+id/textView9"
        android:layout_width="338dp"
        android:layout_height="63dp"
        android:text="Dashboard"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/postnewjob"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="@color/lightGreen"
        android:text="Job Provider"
        android:textSize="26dp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/jobsearch"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="180dp"
        android:backgroundTint="@color/lightGreen"
        android:text="Job Seeker"
        android:textSize="26dp"
        android:textColor="@color/black"/>



    <Button
        android:id="@+id/profile"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="280dp"
        android:backgroundTint="@color/lightGreen"
        android:text="Profile Manage"
        android:textSize="26dp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/review"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="380dp"
        android:backgroundTint="@color/lightGreen"
        android:text="REVIEW"
        android:textSize="26dp"
        android:textColor="@color/black"/>
    <Button
        android:id="@+id/Logout"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="480dp"
        android:backgroundTint="@color/lightGreen"
        android:text="Log Out"
        android:textSize="26dp"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp"
        app:srcCompat="@drawable/post2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="180dp"
        app:srcCompat="@drawable/viewjob" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="280dp"
        app:srcCompat="@drawable/profile22" />
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="380dp"
        app:srcCompat="@drawable/reiwe" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="480dp"
        app:srcCompat="@drawable/logout" />


</RelativeLayout>